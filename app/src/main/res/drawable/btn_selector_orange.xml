<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/dark_orange" />
            <corners
                android:bottomLeftRadius="30dip"
                android:bottomRightRadius="30dip"
                android:topLeftRadius="30dip"
                android:topRightRadius="30dip" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/orange" />
            <corners
                android:bottomLeftRadius="50dip"
                android:bottomRightRadius="50dip"
                android:topLeftRadius="50dip"
                android:topRightRadius="50dip" />
        </shape>
    </item>
</selector>